<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:orientation="vertical"
      android:layout_margin="@dimen/mdb__dialog_margin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mdb__dialog_margin"
        android:textAppearance="?attr/textAppearanceMaterialDialogTitle"
        tools:text="Medium Text"
        android:id="@+id/mdb__title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceMaterialDialogMessage"
        tools:text="Small Text"
        android:id="@+id/mdb__message"
        />

    <FrameLayout
        android:id="@+id/mdb__custom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_marginLeft="@dimen/mdb__dialog_button_margin"
      android:layout_marginRight="@dimen/mdb__dialog_button_margin"
      android:layout_marginBottom="@dimen/mdb__dialog_button_margin"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <Button
        style="?attr/materialDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cancel"
        android:id="@+id/mdb__neutral"
        />

    <View
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        />

    <Button
        style="?attr/materialDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="No"
        android:id="@+id/mdb__negative"
        />

    <Button
        style="?attr/materialDialogButtonPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="OK"
        android:id="@+id/mdb__positive"
        />

  </LinearLayout>

</LinearLayout>