<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:minWidth="280dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/mdb__dialog_margin"
      android:layout_marginLeft="@dimen/mdb__dialog_margin"
      android:layout_marginRight="@dimen/mdb__dialog_margin"
      android:textAppearance="?attr/textAppearanceMaterialDialogTitle"
      tools:text="Medium Text"
      android:id="@+id/mdb__title"
      android:visibility="gone"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?attr/textAppearanceMaterialDialogMessage"
      tools:text="Small Text"
      android:id="@+id/mdb__message"
      android:visibility="gone"
      android:layout_marginLeft="@dimen/mdb__dialog_margin"
      android:layout_marginRight="@dimen/mdb__dialog_margin"
      android:layout_marginTop="@dimen/mdb__dialog_margin"
      />

  <FrameLayout
      android:id="@+id/mdb__custom_content"
      android:paddingTop="@dimen/mdb__dialog_margin"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:visibility="gone"
      />

  <LinearLayout
      android:id="@+id/mdb__button_bar"
      android:layout_margin="@dimen/mdb__dialog_button_margin"
      android:orientation="horizontal"
      android:layout_gravity="end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      >

    <TextView
        style="?attr/materialDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cancel"
        android:id="@+id/mdb__neutral"
        android:visibility="gone"
        />

    <View
        android:id="@+id/mdb__neutral_spacer"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        />

    <TextView
        style="?attr/materialDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="No"
        android:layout_marginLeft="@dimen/mdb__dialog_margin"
        android:layout_marginStart="@dimen/mdb__dialog_margin"
        android:id="@+id/mdb__negative"
        android:visibility="gone"
        />

    <TextView
        style="?attr/materialDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="OK"
        android:id="@+id/mdb__positive"
        android:visibility="gone"
        />

  </LinearLayout>

</LinearLayout>