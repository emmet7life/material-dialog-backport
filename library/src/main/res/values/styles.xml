<resources>

  <style name="Theme.MaterialDialog" parent="Theme.MaterialDialog.Light" />

  <style name="Theme.MaterialDialog.Dark" parent="android:Theme.Dialog">
    <item name="textAppearanceMaterialDialogTitle">@style/TextAppearance.MaterialDialog.Title</item>
    <item name="textAppearanceMaterialDialogMessage">@style/TextAppearance.MaterialDialog.Message
    </item>
    <item name="materialDialogButton">@style/Widget.MaterialDialog.Button</item>
  </style>

  <!-- This theme is a lie to make life easier -->
  <style name="Theme.MaterialDialog.Light" parent="Theme.MaterialDialog.Dark" />

  <style name="TextAppearance.MaterialDialog.Title" parent="android:TextAppearance.Medium">
    <item name="android:textSize">@dimen/mdb__text_title</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="TextAppearance.MaterialDialog.Message" parent="android:TextAppearance.Small">
    <item name="android:textSize">@dimen/mdb__text_message</item>
  </style>

  <style name="TextAppearance.MaterialDialog.Button" parent="android:TextAppearance.Small">
    <item name="android:textSize">@dimen/mdb__text_button</item>
  </style>

  <style name="Widget.MaterialDialog" parent="android:Widget" />

  <style name="Widget.MaterialDialog.Button" parent="Widget.MaterialDialog">
    <item name="android:minWidth">@dimen/mdb__button_min_width</item>
    <item name="android:minHeight">@dimen/mdb__button_min_height</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@drawable/mdb__dialog_button</item>
    <item name="android:textAppearance">@style/TextAppearance.MaterialDialog.Button</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

</resources>
