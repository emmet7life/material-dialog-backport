<resources>

  <style name="MaterialDialog.Dark" parent="android:Theme.Dialog">
    <item name="textAppearanceMaterialDialogTitle">@style/TextAppearance.Dialog.Title</item>
    <item name="textAppearanceMaterialDialogMessage">@style/TextAppearance.Dialog.Message</item>
    <item name="materialDialogButton">@style/Widget.MaterialDialog.Button</item>
    <item name="materialDialogButtonPositive">@style/Widget.MaterialDialog.Button.Positive</item>
  </style>


  <style name="TextAppearance.Dialog.Title" parent="android:TextAppearance.Medium">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="TextAppearance.Dialog.Message" parent="android:TextAppearance.Small">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextAppearance.Dialog.Button" parent="android:TextAppearance.Small">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="Widget.MaterialDialog" parent="android:Widget" />

  <style name="Widget.MaterialDialog.Button" parent="Widget.MaterialDialog">
    <item name="android:minWidth">88dp</item>
    <item name="android:minHeight">36dp</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/mdb__dialog_button</item>
    <item name="android:textAppearance">@style/TextAppearance.Dialog.Button</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Widget.MaterialDialog.Button.Positive" parent="Widget.MaterialDialog.Button">
    <item name="android:textColor">@color/mdb__button_primary</item>
  </style>

</resources>
